form.order
  .order__container
    .order__wrapper
      label.order__label(for="name")
        | Name*
      input.order__input.order__name(type="text" id="name" placeholder="Enter your text here")
      svg(width="100%" height="3")
          path(stroke="#ffffff" stroke-width="3" d="M0 0 H 950")

    .order__wrapper
      label.order__label(for="email")
        | Email*
      input.order__input.order__email(type="email" id="email" placeholder="Enter your text here")
      svg(width="100%" height="3")
          path(stroke="#ffffff" stroke-width="3" d="M0 0 H 950")
  label.order__label.order__label--message(for="message")
    | Message*
    textarea.order__input.order__message(id="message" placeholder="Enter your text here")
    svg(width="100%" height="3")
          path(stroke="#ffffff" stroke-width="3" d="M0 0 H 950")
  button.order__btn(type="submit") заказать
